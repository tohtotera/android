<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout01"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full name"
        android:layout_alignBaseline="@+id/EditText01">
    </TextView>
    <EditText
        android:id="@+id/EditText01"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:maxLength="20"
        android:layout_toRightOf="@+id/TextView01"
        android:layout_width="fill_parent"
        android:layout_marginLeft="10px">
    </EditText>
    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User name"
        android:layout_below="@+id/EditText01"
        android:layout_alignBaseline="@+id/EditText02">
    </TextView>
    <EditText
        android:id="@+id/EditText02"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:maxLength="10"
        android:layout_toRightOf="@+id/TextView02"
        android:layout_width="fill_parent"
        android:layout_below="@+id/EditText01"
        android:layout_alignLeft="@+id/EditText01">
    </EditText>
    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_below="@+id/EditText02"
        android:layout_alignBaseline="@+id/EditText03">
    </TextView>
    <EditText
        android:id="@+id/EditText03"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:password="true"
        android:maxLength="16"
        android:layout_toRightOf="@+id/TextView03"
        android:layout_below="@+id/EditText02"
        android:layout_width="fill_parent"
        android:layout_alignLeft="@+id/EditText01">
    </EditText>
    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_below="@+id/EditText03"
        android:layout_alignBaseline="@+id/EditText04">
    </TextView>
    <EditText
        android:id="@+id/EditText04"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:maxLength="20"
        android:layout_below="@+id/EditText03"
        android:layout_toRightOf="@+id/TextView04"
        android:layout_width="fill_parent"
        android:layout_alignLeft="@+id/EditText01">
    </EditText>
    <Button
        android:id="@+id/Button01"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_width="fill_parent"
        android:layout_below="@+id/EditText04">
    </Button>

</RelativeLayout>